{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "linebreak-style": "off",
        "no-use-before-define": [
            "error",
            {
                "functions": false
            }
        ],
        "no-param-reassign": "off",
        "no-plusplus": "off",
        "lines-between-class-members": "off"
    }
}